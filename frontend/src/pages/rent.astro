---
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";

type Image = {
  id: number | string;
  url: string;
};

type Property = {
  id: number | string;
  title: string;
  location: {
    id: number | string;
    name: string;
  };
  price: number;
  images: Image[];
  publishDate: string;
};

const backendUrl = "http://localhost:8081";

let properties: Property[] = [];

try {
  const response = await fetch(`${backendUrl}/api/properties/rent`);
  if (response.ok) {
    properties = await response.json();
  } else {
    console.error("Backend response error:", response.status);
  }
} catch (err) {
  console.error("Error fetching properties:", err);
}
---

<Layout title="Properties for Rent">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Properties for Rent</Fragment>
      <Fragment slot="desc">
        Discover our handpicked selection of beautiful homes across Mallorca.
      </Fragment>
    </Sectionhead>

    <main class="mt-16">
      <ul class="grid gap-16 max-w-4xl mx-auto">
        {properties.length > 0 ? (
          properties.map((property) => {
            // Coge la primera imagen o una por defecto
            const firstImageUrl = property.images && property.images.length > 0
              ? property.images[0].url
              : 'default-image.png';

            return (
              <li>
                <a
                  href={`/${property.id}`}
                  target="_self"
                  rel="noopener noreferrer"
                  class="block hover:shadow-lg rounded-md transition-shadow"
                >
                  <div class="grid md:grid-cols-2 gap-5 md:gap-10 items-center">
                    <img
                      src={`${backendUrl}/uploads/${firstImageUrl}`}
                      alt={property.title}
                      class="w-full rounded-md object-cover object-center bg-white"
                      loading="lazy"
                    />
                    <div>
                      <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
                        {property.location.name}
                      </span>
                      <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1">
                        {property.title}
                      </h2>
                      <p class="text-lg text-slate-600 mt-2 font-medium">
                        â‚¬ {property.price.toLocaleString()}
                      </p>
                      <time class="text-gray-400 block mt-2 text-sm">
                        Listed on {new Date(property.publishDate).toLocaleDateString()}
                      </time>
                    </div>
                  </div>
                </a>
              </li>
            );
          })
        ) : (
          <p class="text-center text-gray-500">No properties found for rent.</p>
        )}
      </ul>
    </main>
  </Container>
</Layout>
